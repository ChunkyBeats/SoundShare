<div class="form-group">
  <label class="control-label">User : </label>
  {{view "select"
    content=model
    selection=selectedUser
    optionValuePath="content.id"
    optionLabelPath="content.username"
    prompt="Select a User"
  }}
</div>

<p>Selected User : {{controllers.new-song.selectedUser.username}}</p>
<div class="form-group">
  <label class="control-label">Playlist : </label>
  {{view "select"
    content=userPlaylists
    optionValuePath="userPlaylists.id"
    optionLabelPath="content.name"
    prompt="Select a Playlist"
  }}
</div>

<form>
  <div class="form-group">
    <label for='suggestion'>Input a Soundcloud link:</label>
    {{input value=suggestion id='suggestion' placeholder="Link"}}
    {{#if errors}}
      {{#each error in errors}}
        <p>{{error.message}}</p>
      {{/each}}
    {{/if}}
  </div>
  <button class="btn btn-primary" {{action 'submit'}}>Send Song!</button>
</form>

{{outlet}}
