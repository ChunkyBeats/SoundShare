<form class="form-horizontal" role="form">
  <div class="form-group">
    <label class="control-label col-sm-2" for="name">User Name:</label>
    <div class="col-sm-8">
      {{input value=name id='name' placeholder="User Name" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for='email'>Email:</label>
    <div class="col-sm-8">
      {{input value=email id='email' type="email" placeholder="Email" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="password">Create Password:</label>
    <div class="col-sm-8">
      {{input value=password id='password' type="password" placeholder="********" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="password_confirm">Confirm Password:</label>
    <div class="col-sm-8">
      {{input value=password_confirm id='password_confirm' type="password" placeholder="********" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <button class="btn btn-primary" {{action 'submit'}}>Create Account</button>
    </div>
  </div>
</form>

<button class="btn btn-success" {{action 'facebookSignup'}}>Create Account Via Facebook</button>
